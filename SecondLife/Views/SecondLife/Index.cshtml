@using SecondLife.Models 

@{
    ViewBag.Title = "Index";
}


<h1>
   Bienvenido a SecondLife!
</h1>
<div class="container">
    <div class="navbar-collapse collapse show menu">
        <ul class="navbar-nav" style="display: flex;padding: 0;margin-left: -35px;padding-bottom: 20px;">
            @foreach (var item in ViewBag.categoria as List<Categoria>)
            {
                <li class="nav-item" style="list-style: none;">
                    @Html.ActionLink(item.nombre, "Product", new { id_categ = item.id_categ }, new { @class = "color-link" })
                </li>
            }
        </ul>
    </div>

    <p>@ViewBag.mensaje</p>
    <div class="row row-cols-1 row-cols-md-3 ">
        @foreach (var item in ViewBag.producto as List<Producto>)
        {
            <div class="col col-sm-4 mb-4 product rounded" style="height: 450px;">
                <div class="card card-sm-3 h-100  b-card" style="text-align: center;">
                    <img class="card-img-top img-index" src="@Url.Content(item.imagen)" />
                    <div class="card-body">
                        <p class="h-link">
                            @Html.ActionLink(item.marca + item.modelo, "Detail_Product", new { id = item.id_prod }, new { @class = "card-title" })
                        </p>
                        <p class="card-text" style="height:90px">@Html.DisplayFor(modelItem => item.descripcion)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.precio)</p>
                        @using (Html.BeginForm("Index", "SecondLife", FormMethod.Post))
                        {
                            @Html.Hidden("id", item.id_prod)
                            @Html.Hidden("stock", item.stock)
                            @Html.TextBox("cant", item.stock)
                            <input type="submit" value="Procesar" class="btn btn-primary" style="margin-bottom:10px" />
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
