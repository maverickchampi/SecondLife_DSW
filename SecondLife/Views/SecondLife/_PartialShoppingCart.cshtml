@model IEnumerable<SecondLife.Models.Item>

<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
           Producto
        </th>
        <th>
           Precio
        </th>
        <th>
           Cantidad
        </th>
        <th>
            Sub total
        </th>
        <th></th>
    </tr>

    @if(Model.Count()>0){
    foreach (var item in Model)
    {
        <tr>
            <td style="vertical-align:middle">
                <img class="card-img-top img-index" style="width: 125px; height: 125px; object-fit: contain;" src="@Url.Content(item.imagen)" />
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.nom_prod)
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.cant)
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.sub_total)
            </td>
        </tr>
    }
    }

</table>
