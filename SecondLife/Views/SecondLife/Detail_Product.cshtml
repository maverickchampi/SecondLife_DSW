@model SecondLife.Models.Producto

@{
    ViewBag.Title = "Detail_Product";
}

<div style="min-height: calc(100vh - 130px);">
    <h2>Detalle de producto</h2>

    <!--mensaje-->
    <p>@ViewBag.mensaje</p>

    <hr />
    <div style="display:flex;">
        <img class="card-img-top img-index" style="width:225px;height:225px;object-fit:contain;margin-left:100px;margin-right:40px; " src="@Url.Content(Model.imagen)" />

        <dl class="dl-horizontal" style="margin-top:25px">


            <dt style="text-align: left;">
                Codigo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.codigo)
            </dd>

            <dt style="text-align: left;">
                Marca
            </dt>

            <dd>
                @Html.DisplayFor(model => model.marca)
            </dd>

            <dt style="text-align: left;">
                Modelo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.modelo)
            </dd>

            <dt style="text-align: left;">
                Descripción
            </dt>

            <dd>
                @Html.DisplayFor(model => model.descripcion)
            </dd>

            <dt style="text-align: left;">
                Observación
            </dt>

            <dd>
                @Html.DisplayFor(model => model.observacion)
            </dd>

            <dt style="text-align: left;">
                @Html.DisplayNameFor(model => model.stock)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.stock)
            </dd>

            <dt style="text-align: left;">
                @Html.DisplayNameFor(model => model.precio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.precio)
            </dd>

            <dt style="text-align: left;">
                @Html.DisplayNameFor(model => model.calidad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.calidad)
            </dd>

        </dl>
    </div>

    <div style="margin-top:75px;margin-left:75px">
        @using (Html.BeginForm("Detail_Product", "SecondLife", FormMethod.Post))
        {
            @Html.Hidden("id", Model.id_prod)
            @Html.Hidden("stock", Model.stock)
            @Html.ActionLink("Regresar", "Product", null, new { @class = "btn btn-info" })
            @Html.TextBox("cant", 0, new { type = "number", min = "0", max = Model.stock })
            <input type="submit" value="Agregar" class="btn btn-primary" />
        }
    </div>
    </div>

